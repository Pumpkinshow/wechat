swiper{
  height: 400rpx;
}
swiper-item image{
  width: 100%;
  height: 100%;
}
.list{
  padding: 32rpx;
}
.list .title{
  font-size: 48rpx;
  line-height: 48rpx;
  margin:24rpx 0;
  padding-left: 10rpx;
  border-left: 20rpx solid #44B549;
}

.list .content{
  border-bottom: 1rpx solid #e1e1e1;
  padding:10rpx 0;
  display: flex;
}
.list .content:last-child{
  border-bottom: none;
}

.list .content image{
  width: 200rpx;
  height: 200rpx;
  padding-right: 20rpx;
}

.list-item view:first-child{
  font-size: 36rpx;
  color: #44B549;
  font-weight: bold;
  line-height: 50rpx;
}
.list-item view:nth-child(2){
  font-size: 30rpx;
  color: #222;
}
.list-item view:nth-child(3){
  font-size: 30rpx;
  color: #222;
}
.list-item button{
  font-size: 20rpx;
  float:left;
  margin-right: 10rpx;
  padding:10rpx;
  line-height: 20rpx;
  color:#44B549;
}