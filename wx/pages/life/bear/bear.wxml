<view class="container">
  <image class="star" src="../images/bg-space.png"></image>
  <image class="mountain" src="../images/bg-mountain.png"></image>
  <view class='bear {{bearCenter}}'>
    <image wx:if="{{step==1}}" src="../images/bear-1.png" class='step-1'></image>
    <image wx:if="{{step==2}}" src="../images/bear-2.png" class='step-2'></image>
    <image wx:if="{{step==3}}" src="../images/bear-3.png" class='step-3'></image>
    <image wx:if="{{step==4}}" src="../images/bear-4.png" class='step-4'></image>
    <image wx:if="{{step==5}}" src="../images/bear-5.png" class='step-5'></image>
    <image wx:if="{{step==6}}" src="../images/bear-6.png" class='step-6'></image>
    <image wx:if="{{step==7}}" src="../images/bear-7.png" class='step-7'></image>
    <image wx:if="{{step==8}}" src="../images/bear-8.png" class='step-8'></image>
  </view>
</view>