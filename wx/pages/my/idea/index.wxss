/* pages/my/idea/index.wxss */
.container{
  height: 100%;
  background: #f1f1f1;
}
textarea{
  background: #fff;
  width: 100%;
  padding:10rpx 36rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}
.title{
  font-size: 32rpx;
  line-height: 80rpx;
  padding:0 36rpx;
}
.num{
  text-align: right;
  font-size: 28rpx;
  color:#999;
  padding:0 32rpx;
  line-height: 64rpx;
}
.btn{
  margin:32rpx 160rpx;
}
.btn button{
  border-radius: 46rpx;
  border:1px solid #44B549;
  background: #44B549;
  color:#fff;
  font-weight: bold;
}
.hoverbtn{
  border-radius: 46rpx;
  border:1px solid #44B549;
  background: #44B549;
  color:#fff;
  opacity: 0.7;
}
.operate{
  margin-top: 64rpx;
  display: flex;
}
.operate button{
  border-radius: 46rpx;
  border:1px solid #44B549;
  background: #44B549;
  color:#fff;
}
.operate .gray{
  border:1px solid gray;
  background: gray;
}